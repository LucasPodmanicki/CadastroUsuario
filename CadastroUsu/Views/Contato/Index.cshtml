@model List<ContatoModel>
@{
    ViewData["Title"] = "Lista de Contatos";
}

<div class="text-center">
    
    <div class = "d-grid gap2 d-md-flex justify-content-md-start">
        <a class ="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar Novo Usuário</a>
    </div>
    <br>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <h1 class ="display-4">Listagem de Usuários</h1>



 <table id="table-contatos" class="display" style="width:100%">
  <thead>
    <tr>
      <th scope="col">ID</th> 
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Celular</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
            @if(Model != null && Model.Any())      //Jogar dados da tabela para HTML
            {
                foreach(var contato in Model)
                {
                    <tr>
                          <th scope="row">@contato.Id</th>
                          <td>@contato.Name</td>
                          <td>@contato.Email</td>
                          <td>@contato.Celular</td>
                          <td>
                              <a role = "button" class="btn btn-primary" asp-route-i="@contato.Id"  asp-controller="Contato" asp-action="Editar">Editar</a>
                              <a role = "button" class="btn btn-danger" asp-route-i="@contato.Id"  asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                        </td>
                        </tr>
                }
            }


  </tbody>
</table>
</div>  
