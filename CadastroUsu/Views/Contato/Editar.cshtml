@model ContatoModel
@{
    ViewData["Title"] = "Editar Cadastro";
}

<div class="text-center">
    <h1 class ="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

  <input type="hidden" asp-for=Id />
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Name" class="form-control"placeholder="Digite o nome do contato">
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" asp-for="Email" class="form-control"placeholder="Digite o email do contato">
  </div>

  <div class="form-group">
    <label for="celular">Celular</label>
    <input type="number" asp-for="Celular" class="form-control"placeholder="Digite o celular do contato">
  </div>

  <button type="submit" class="btn btn-primary">Confirmar Alteração</button>
 
  <a class="btn-secondary" asp-controller="Contato" asp-action ="Index" role="button">Voltar Aos Contatos</a>
</form>
