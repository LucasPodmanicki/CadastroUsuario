@model ContatoModel
@{
    ViewData["Title"] = "Confirmação Para Apagar Contato";
}

                                                                // GATILHO PARA APAGAR USUARIO
<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Name  )? </h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action = "Index">Cancelar</a>
<a class ="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Apagar"  asp-route-id="@Model.Id">Confirmar</a>


